@model Ferrero.GestorDeProjetos.Web.Models.RequisicaoDeCompraViewModel

@{
    ViewData["Title"] = "Excluir requisição de compra";
}

@section Styles {
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css">
}

<!-- Layout content -->
<div class="layout-content">
  <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Excluir/ </span>Requisição de Compra
    </h4>
    <div class="card mb-4">
      <h6 class="card-header">
        Informações da requisição de compra
      </h6>
      <div class="card-body">
        <form asp-action="Delete">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="Numero" />

          @{await Html.RenderPartialAsync("_FormFields.cshtml");}

          <div class="text-right mt-3">
            <a asp-action="Index" class="btn btn-default">
              <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
            </a>
            <button class="btn btn-danger" type="submit">
              <span class="ion ion-md-trash" aria-hidden="true"></span>&nbsp;Requisição de Compra
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>