@model Ferrero.GestorDeProjetos.Web.Models.ViewModels.RequisicaoDeCompraViewModel

@{
    ViewData["Title"] = "Editar requisição de compra";
}
 
@section Styles {
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css">
}

@section Scripts {
  <!-- Dependencies -->
  <script src="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.js"></script>
  <script src="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.js"></script>
  <script src="~/vendor/libs/vanilla-text-mask/vanilla-text-mask.js"></script>
  <script src="~/vendor/libs/vanilla-text-mask/text-mask-addons.js"></script>
  <script src="~/js/forms_extras.js"></script>
  <script src="~/js/forms_file-upload.js"></script>
  <script src="~/js/forms_pickers.js"></script>
  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Layout content -->
<div class="layout-content">
  <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Editar/</span>Requisição de Compra
    </h4>
    <div class="card mb-4">
      <h6 class="card-header">
        Informações da requisição de compra
      </h6>
      <div class="card-body">
        <form asp-action="Edit" enctype="multipart/form-data">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="Numero" />
          <input type="hidden" asp-for="Proposta" />

          @{await Html.RenderPartialAsync("_FormFields.cshtml");}

          <div class="text-right mt-3">
            <a asp-action="Index" class="btn btn-default">
              <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
            </a>
            <button class="btn btn-warning" type="submit">
              <span class="ion ion-md-create" aria-hidden="true"></span>&nbsp;Requisição de Compra
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>