@model Ferrero.GestorDeProjetos.Web.Models.Projeto

@{
    ViewData["Title"] = "Excluir Projeto";
}

<h2>Excluir</h2>
<h4>Projeto</h4>
<hr />
<div class="row">
  <div class="col-md-8">
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" disabled />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Descricao" class="control-label"></label>
            <textarea asp-for="Descricao" class="form-control input" disabled></textarea>
            <span asp-validation-for="Descricao" class="text-danger"></span>
        </div>
        <div class="row">
          <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DataDeInicio" class="control-label"></label>
                <input asp-for="DataDeInicio" class="form-control" style="text-align:right;" disabled/>
                <span asp-validation-for="DataDeInicio" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-3">
            <div class="form-group">
                <label asp-for="DataDeTermino" class="control-label"></label>
                <input asp-for="DataDeTermino" class="form-control" style="text-align:right;" disabled/>
                <span asp-validation-for="DataDeTermino" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
            </div>
          </div>
          <div class="col-md-2">
          <div class="form-group">
            </label asp-for="Concluido" class="control-label"><strong>Conclu√≠do?</strong></label>
            <input type="checkbox"  asp-for="Concluido" class="form-control" disabled/>
          </div>
          </div>
        </div>
        <div class="text-right">
          <button class="btn btn-danger" type="submit">
            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span> Excluir
          </button>
          <a asp-action="Index" class="btn btn-default">
            <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
          </a>
        </div>            
    </form>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
