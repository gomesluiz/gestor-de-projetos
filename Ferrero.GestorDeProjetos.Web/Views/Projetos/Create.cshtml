@model Ferrero.GestorDeProjetos.Web.Models.Projeto

@{
    ViewData["Title"] = "Create";
}

<h3 class="text-uppercase">Iniciar Projeto</h3>
<hr />
<div class="container" style="margin: 0 auto;width:70%;">
  <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
          <label asp-for="Nome" class="control-label"></label>
          <input asp-for="Nome" class="form-control input-lg" />
          <span asp-validation-for="Nome" class="text-danger"></span>
      </div>
      <div class="form-group">
          <label asp-for="Descricao" class="control-label"></label>
          <textarea asp-for="Descricao" class="form-control input-lg"></textarea>
          <span asp-validation-for="Descricao" class="text-danger"></span>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
              <label asp-for="DataDeInicio" class="control-label"></label>
              <input asp-for="DataDeInicio" class="form-control input-lg" style="text-align:right;"/>
              <span asp-validation-for="DataDeInicio" class="text-danger"></span>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
              <label asp-for="DataDeTermino" class="control-label"></label>
              <input asp-for="DataDeTermino" class="form-control input-lg" style="text-align:right;"/>
              <span asp-validation-for="DataDeTermino" class="text-danger"></span>
          </div>
        </div>
        <div class="col-md-6">
        <div class="form-group">
          <div class="checkbox checkbox-inline">
                  <input type="checkbox"  asp-for="Concluido" />
                  </label for="Concluido">Concluido? </label>
          </div>
        </div>
        </div>
      </div>
      <div class="text-right">
        <button class="btn btn-primary btn-lg" type="submit">Salvar</button>
        <a asp-action="Index" class="btn btn-default btn-lg">Cancelar</a>
      </div>            
  </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
