@model Ferrero.GestorDeProjetos.Web.Models.Projeto

@{
    ViewData["Title"] = "Novo";
}

<div class="container" style="margin: 50px auto;width:70%;">
  <div class="panel panel-default">
  <div class="panel-heading"><h4 class="text-uppercase">Novo Projeto</h4></div>
  <div class="panel-body">
  <form asp-action="Create">
      <div asp-validation-summary="ModelOnly" class="text-danger"></div>
      <div class="form-group">
          <label asp-for="Nome" class="control-label"></label>
          <input asp-for="Nome" class="form-control" />
          <span asp-validation-for="Nome" class="text-danger"></span>
      </div>
      <div class="form-group">
          <label asp-for="Descricao" class="control-label"></label>
          <textarea asp-for="Descricao" class="form-control input"></textarea>
          <span asp-validation-for="Descricao" class="text-danger"></span>
      </div>
      <div class="row">
        <div class="col-md-3">
          <div class="form-group">
              <label asp-for="DataDeInicio" class="control-label"></label>
              <input asp-for="DataDeInicio" class="form-control" style="text-align:right;"/>
              <span asp-validation-for="DataDeInicio" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
          </div>
        </div>
        <div class="col-md-3">
          <div class="form-group">
              <label asp-for="DataDeTermino" class="control-label"></label>
              <input asp-for="DataDeTermino" class="form-control" style="text-align:right;"/>
              <span asp-validation-for="DataDeTermino" asp-format="{0:yyyy-MM-dd}" class="text-danger"></span>
          </div>
        </div>
        <div class="col-md-2">
        <div class="form-group">
          </label asp-for="Concluido" class="control-label"><strong>Conclu√≠do?</strong></label>
          <input type="checkbox"  asp-for="Concluido" class="form-control"/>
        </div>
        </div>
      </div>
      <div class="text-right">
        <button class="btn btn-success" type="submit">Criar</button>
        <a asp-action="Index" class="btn btn-default">Cancelar</a>
      </div>            
  </form>
  </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
