@model Ferrero.GestorDeProjetos.Web.Models.Projeto

@{
    ViewData["Title"] = "Novo de Projeto";
}

<!-- Layout content -->
<div class="layout-content">

  <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">

    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Novo /</span> Projeto
    </h4>

    <div class="card mb-4">
      <h6 class="card-header">
        Informações Básicas
      </h6>
      <div class="card-body">
        <form asp-action="Create">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          @{await Html.RenderPartialAsync("_FormFields.cshtml");}
          <div class="text-right mt-3">
            <a asp-action="Index" class="btn btn-default">
              <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
            </a>
            <button class="btn btn-primary" type="submit">
              <span class="ion ion-md-save" aria-hidden="true"></span>&nbsp;Criar projeto 
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
