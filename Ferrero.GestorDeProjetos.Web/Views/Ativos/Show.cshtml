@model Ferrero.GestorDeProjetos.Web.Models.ViewModels.AtivoViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
    <head>
        <title>Formulario de Ativo (Versão para Impressão)</title>

        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="IE=edge,chrome=1">
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no, minimum-scale=1.0, maximum-scale=1.0">
        <link rel="icon" type="image/x-icon" href="favicon.ico">

    
        <!-- Icon fonts -->
        <link rel="stylesheet" href="~/vendor/fonts/ionicons.css">
        
        <!-- Core stylesheets -->
        <link rel="stylesheet" href="~/vendor/css/rtl/bootstrap.css" class="theme-settings-bootstrap-css">
        <link rel="stylesheet" href="~/css/application.css">

        <!-- Load polyfills -->
    
        <!-- Theme settings -->

        <!-- This file MUST be included after core stylesheets and layout-helpers.js in the <head> section -->
    
        <!-- Core scripts -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

    
        <!-- Libs -->
        <style>
            html,
            body {
                background: #fff !important;
            }

            body> :not(.form-print) {
                display: none !important;
            }

            .form-print {
                min-width: 768px !important;
                font-size: 15px !important;
            }

            .form-print * {
                border-color: #aaa !important;
                border-spacing: 0px;
                border-collapse: separate;
                color: #000 !important;
            }
  
        </style>
    </head>

    <body>
        <div class="page-loader">
            <div class="bg-primary"></div>
        </div>

        <div class="form-print">
            <table class="table">
                <tbody>
                    <tr>
                        <td colspan="3" class="text-center">
                            <h4 class="text-uppercase">Formulário Criação Imobilizado (WIP)</h4>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <small>Informações para criação de código de imobilizado.</small>
                        </td>
                    </tr>
                </tbody>
            </table>

            <table class="table">
                <tbody>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Descricao):</strong></td>
                        <td colspan="2">@Html.DisplayFor(model => model.Descricao)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.CentroDeCustoNome):</strong></td>
                        <td colspan="2">@Html.DisplayFor(model => model.CentroDeCustoNome)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.OrdemDeInvestimentoNumero):</strong></td>
                        <td colspan="2">@Html.DisplayFor(model => model.OrdemDeInvestimentoNumero)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Planta):</strong></td>
                        <td colspan="2">@Html.DisplayFor(model => model.Planta)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Quantidade):</strong></td>
                        <td colspan="2">@Html.DisplayFor(model => model.Quantidade)</td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Divisao):</strong></td>
                        <td>
                            @if (Model.Divisao == 1)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Industrial</label>
                        </td>
                        <td>
                            @if (Model.Divisao == 2)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Comercial</label>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Natureza):</strong></td>
                        <td>
                            @if (Model.Natureza == 1 || Model.Natureza == 3)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Serviço</label>
                        </td>
                        <td>
                            @if (Model.Natureza == 2 || Model.Natureza == 3)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Itens, materiais e/ou máquinas</label>
                        </td>
                    </tr>
                    <tr>
                        <td><strong>@Html.DisplayNameFor(model => model.Propriedade):</strong></td>
                        <td>
                            @if (Model.Propriedade == 1)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Bem Próprio</label>
                        </td>
                        <td>
                            @if (Model.Propriedade == 2)
                            {
                                <span class="ion ion-md-checkbox-outline"></span>
                            }
                            else 
                            {
                                <span class="ion ion-md-square-outline"></span>
                            }
                            <label>&nbsp;Benfeitorias em Propriedade de Terceiros</label>
                        </td>
                    </tr>
                    <tr>
                        <td colspan="3">
                            <small>
                                <strong>Importante:</strong>  Em caso deste bem se tratar de benfeitoria em propriedade de terceiros, anexar o contrato
                        de aluguel e/ou documento equivalente que indique o prazo de vigência
                            </small>
                        </td>
                    </tr>
                    <tr></tr>
                </tbody>
            </table>
            
            <table class="table">
                <tbody>
                <tr>
                    <td colspan="3" class="text-center"><h6>Preencha com um <span class="ion ion-md-checkbox-outline"></span> as opções correspondentes ao ativo que está sendo comprado</h6></td>
                </tr>
                <tr>
                    <td width="45%"><strong><label asp-for="UsoNoAdministrativo"></label>:</strong></td>
                    <td width="55%" colspan="2">
                        @if (Model.UsoNoAdministrativo == true)
                        {
                            <span class="ion ion-md-checkbox-outline"></span>
                        }
                        else 
                        {
                            <span class="ion ion-md-square-outline"></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><strong><label asp-for="UsoNoProcessoFabril"></label>:</strong></td>
                    <td colspan="2">
                        @if (Model.UsoNoProcessoFabril == true)
                        {
                            <span class="ion ion-md-checkbox-outline"></span>
                        }
                        else 
                        {
                            <span class="ion ion-md-square-outline"></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><strong><label asp-for="ProntoParaUso"></label>:</strong></td>
                    <td colspan="2">
                        @if (Model.ProntoParaUso == true)
                        {
                            <span class="ion ion-md-checkbox-outline"></span>
                        }
                        else 
                        {
                            <span class="ion ion-md-square-outline"></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><strong><label asp-for="MaquinaEmMontagemInstalacao" class="custom-control-label"></label>:</strong></td>
                    <td colspan="2">
                        @if (Model.MaquinaEmMontagemInstalacao == true)
                        {
                            <span class="ion ion-md-checkbox-outline"></span>
                        }
                        else 
                        {
                            <span class="ion ion-md-square-outline"></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td><strong><label asp-for="EdificacaoEmAndamento" class="custom-control-label"></label>:</strong></td>
                    <td colspan="2">
                        @if (Model.EdificacaoEmAndamento == true)
                        {
                            <span class="ion ion-md-checkbox-outline"></span>
                        }
                        else 
                        {
                            <span class="ion ion-md-square-outline"></span>
                        }
                    </td>
                </tr>
                <tr>
                    <td colspan="3" class="text-center border-light"></td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <tbody>
                <tr>
                    <td colspan="3" class="text-center">
                        <strong>@Html.DisplayNameFor(model => model.Observacoes)</strong>
                    </td>
                </tr>
                <tr>
                    <td colspan="3">
                        @Html.DisplayFor(model => model.Observacoes)
                    </td>
                </tr>
            </tbody>
        </table>

        <table class="table">
            <tbody>
                <tr>
                    <td width="15%"><strong>Data da solicitação: </strong></td>
                    <td width="85%" colspan="2">@DateTime.Now.ToString("dd-MM-yyyy")</td>
                </tr>
                <tr>
                    <td><strong>@Html.DisplayNameFor(model => model.Requisitante):</strong></td>
                    <td colspan="2">@Html.DisplayFor(model => model.Requisitante)</td>
                </tr>
            </tbody>
        </table>

        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td width="35%" colspan="4" class="text-center"><strong>Preenchimento exclusivo da contabilidade</strong></td>
                </tr>
                <tr>
                    <td width="35%" ><strong>Número do Ativo WIP Criado:</strong></td>
                    <td width="30%" colspan="2"></td> 
                    <td></td>
                </tr>
            </tbody>
        </table>

        <table class="table table-borderless">
            <tbody>
                <tr>
                    <td colspan="3"><small>Todas as solicitações deverão obrigatoriamente ser solicitadas via e-mail para DLL-BRA08-Contabilidade-AtivoImobilizado</small></td>
                </tr>
                <tr>
                    <td colspan="3"><small>A contabilidade tem o prazo de até 24 horas para criação dos dados mestres solicitados.</small></td>
                </tr>
            </tbody>
            <!--Table body-->
            </table>
        </div>
    </body>
    <!-- Core scripts -->
    <script src="~/vendor/js/bootstrap.js"></script>
    
    <!-- Libs -->
    
    <!-- Application -->
    <script src="~/js/application.js"></script>
    <script>
        // -------------------------------------------------------------------------
        // Print on window load
        $(function () {
            window.print();
        });
    </script>
</html>
