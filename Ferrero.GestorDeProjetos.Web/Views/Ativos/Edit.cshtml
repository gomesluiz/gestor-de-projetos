@model Ferrero.GestorDeProjetos.Web.Models.ViewModels.AtivoViewModel

@{
    ViewData["Title"] = "Editar Ativo";
}

<h2>Editar</h2>
<h4>Ativo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input maxlength="50" asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Localizacao" class="control-label"></label>
                <input maxlength="50" asp-for="Localizacao" class="form-control" />
                <span asp-validation-for="Localizacao" class="text-danger"></span>
            </div>    
            <div class="form-group">
                <label asp-for="OrdemDeInvestimentoId" class="control-label"></label>
                <select asp-for="OrdemDeInvestimentoId" class="form-control" asp-items="ViewBag.OrdemDeInvestimentoId">
                    <option value="">-- Selecione a Ordem De Investimento --</option>
                </select>
                <span asp-validation-for="OrdemDeInvestimentoId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="CentroDeCustoId" class="control-label"></label>
                <select asp-for="CentroDeCustoId" class="form-control" asp-items="ViewBag.CentroDeCustoId">
                    <option value="">-- Selecione o Centro de Custo --</option>
                </select>
                <span asp-validation-for="CentroDeCustoId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Situacao" class="control-label"></label>
                <select asp-for="Situacao" class="form-control">
                  <option value="0">N√ÉO TRANSFERIDO</option>
                  <option value="1">TRANSFERIDO</option>
                </select>
                <span asp-validation-for="Situacao" class="text-danger"></span>
            </div>
            <div class="text-right">
              <button class="btn btn-warning" type="submit">
                <span class="glyphicon glyphicon-floppy-save" aria-hidden="true"></span> Salvar
              </button>
              <a asp-action="Index" class="btn btn-default">
                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Cancelar
              </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
