@model IEnumerable<Ferrero.GestorDeProjetos.Web.Models.ViewModels.AtivoViewModel>

@{
    ViewData["Title"] = "Todos os Ativos";
}

@section Styles {
    <!-- Dependencies -->
    <link rel="stylesheet" href="~/vendor/libs/datatables/datatables.css">
}
@section Scripts {
    <!-- Dependencies -->
    <script src="~/vendor/libs/datatables/datatables.js"></script>
    <script src="~/js/tables_datatables.js"></script>
}

<!-- CONTENT -->
<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
  <div><span class="text-muted font-weight-light">Todos/</span>Ativos Imobilizados</div>
  <a type="button" class="btn btn-primary rounded-pill d-block" asp-action="Create" asp-controller="Ativos">
    <span class="ion ion-md-add"></span>&nbsp;Ativo Imobilizado
  </a>
</h4>

<div class="card">
  <div class="card-datatable table-responsive">
    <table id="todos-os-projetos" class="table table-striped table-bordered table-datatable">
      <thead>
        <tr>
          <th class="text-center">@Html.DisplayNameFor(model => model.Id)</th>
          <th class="text-center">@Html.DisplayNameFor(model => model.Descricao)</th>
          <th class="text-center">@Html.DisplayNameFor(model => model.Planta)</th>
          <th class="text-center">@Html.DisplayNameFor(model => model.DescricaoDaSituacaoDoAtivo)</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
@foreach (var item in Model) {
        <tr>
          <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
          <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
          <td>@Html.DisplayFor(modelItem => item.Planta)</td>
          @if(item.SituacaoDoAtivo == 1){
            <td class="text-center"><span class=" badge badge-outline-primary">@Html.DisplayFor(modelItem => item.DescricaoDaSituacaoDoAtivo)</span></td>
          } else if(item.SituacaoDoAtivo == 2) {
            <td class="text-center"><span class=" badge badge-outline-secondary">@Html.DisplayFor(modelItem => item.DescricaoDaSituacaoDoAtivo)</span></td>
          } else {
            <td class="text-center"><span class=" badge badge-outline-danger">@Html.DisplayFor(modelItem => item.DescricaoDaSituacaoDoAtivo)</span></td>
          }
          <td class="text-center">
              <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
                <span class="ion ion-md-create">
              </a>
              <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
                <span class="ion ion-md-trash">
              </a>
          </td>
        </tr>
}
      </tbody>
    </table>
  </div>
</div>
