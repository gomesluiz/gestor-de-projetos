  <div class="text-left col-md-2">
    <p>
    <a type="button" class="btn btn-success" asp-action="Create">
      <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
    </a>
    </p>
  </div>
</div>

<table class="table table-bordered table-sm">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.Descricao)</th>
            <th>@Html.DisplayNameFor(model => model.Localizacao)</th>
            <th>@Html.DisplayNameFor(model => model.OrdemDeInvestimento)</th>
            <th>@Html.DisplayNameFor(model => model.Situacao)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Id)</td>
            <td>@Html.DisplayFor(modelItem => item.Descricao)</td>
            <td>@Html.DisplayFor(modelItem => item.Localizacao)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.OrdemDeInvestimento)</td>
            <td class="text-center">@Html.DisplayFor(modelItem => item.Situacao)</td>
            <td>
                <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">Atualizar</a> |
                <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">Remover</a>
            </td>
        </tr>
}
    </tbody>
</table>
