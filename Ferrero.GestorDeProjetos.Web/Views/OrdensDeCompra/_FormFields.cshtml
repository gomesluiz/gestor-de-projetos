@model Ferrero.GestorDeProjetos.Web.Models.OrdemDeCompraViewModel

<div class="form-group">
    <label asp-for="Numero" class="form-label"></label>
    <input asp-for="Numero" class="form-control" />
    <span asp-validation-for="Numero" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Data" class="form-label"></label>
    <input asp-for="Data" class="form-control text-mask-date datepicker-base" placeholder="__/__/____" />
    <span asp-validation-for="Data" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="NumeroDaRequisicao" class="form-label"></label>
    <input asp-for="NumeroDaRequisicao" class="form-control" />
    <span asp-validation-for="NumeroDaRequisicao" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Valor" class="form-label"></label>
    <input asp-for="Valor" class="form-control" />
    <span asp-validation-for="Valor" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Descricao" class="form-label"></label>
    <input asp-for="Descricao" class="form-control bootstrap-maxlength-field" maxlength="250" />
    <span asp-validation-for="Descricao" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="AtivoId" class="form-label"></label>
    <select asp-for="AtivoId" class="form-control" asp-items="ViewBag.AtivoId">
        <option value="">-- Selecione --</option>
    </select>
    <span asp-validation-for="AtivoId" class="text-danger" />
</div>
<div class="form-group">
    <label for="Arquivo" class="form-label">Documento</label>
    <div class="custom-file">
        <input type="file" id="Arquivo" name="Arquivo" class="form-control custom-file-input" />
        <label class="custom-file-label" id="ArquivoLabel"></label>
    </div>
</div>
