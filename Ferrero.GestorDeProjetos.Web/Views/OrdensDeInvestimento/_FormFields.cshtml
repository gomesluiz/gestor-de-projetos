@model Ferrero.GestorDeProjetos.Web.Models.OrdemDeInvestimentoViewModel

<div class="form-group">
  <label asp-for="Numero" class="control-label"></label>
  <input asp-for="Numero" class="form-control bootstrap-maxlength-field" maxlength="7"/>
  <span asp-validation-for="Numero" class="text-danger"></span>
</div>
<div class="form-group">
  <label asp-for="ProjetoId" class="control-label"></label>
  <select asp-for="ProjetoId" class="form-control" asp-items="ViewBag.ProjetoId">
      <option value="">-- Selecione o Projeto --</option>
  </select>
  <span asp-validation-for="ProjetoId" class="text-danger" />
</div>
<div class="form-group">
  <label asp-for="Valor" class="control-label"></label>
  <input asp-for="Valor" id="text-mask-number" class="form-control" placeholder="R$"/>
  <span asp-validation-for="Valor" class="text-danger"></span>
</div>