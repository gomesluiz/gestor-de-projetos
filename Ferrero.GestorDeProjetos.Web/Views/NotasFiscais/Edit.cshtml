@model Ferrero.GestorDeProjetos.Web.Models.NotaFiscalViewModel

@{
    ViewData["Title"] = "Editar nota fiscal";
}

@section Styles {
  <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css">
}

@section Scripts {
    <!-- Dependencies -->
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.js"></script>
    <script src="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.js"></script>
    <script src="~/vendor/libs/vanilla-text-mask/text-mask-addons.js"></script>
    <script src="~/vendor/libs/vanilla-text-mask/vanilla-text-mask.js"></script>
    <script src="~/js/forms_extras.js"></script>
    <script src="~/js/forms_pickers.js"></script>
    
    <script type="text/javascript">
        $(document).ready(function () {
            $('#NomeDoFornecedor').autocomplete({
                source: '/Fornecedores/GetFornecedoresPorNome',
                select: function (event, ui) {
                    $("#FornecedorId").val(ui.item.id);
                    this.value = ui.item.value;
                    return false;
                }
            });
        });
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Layout content -->
<div class="layout-content">
  <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Editar/</span>Nota Fiscal
    </h4>
    <div class="card mb-4">
      <h6 class="card-header">
        Informações da nota fiscal
      </h6>
      <div class="card-body">
        <form asp-action="Edit">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="Id" />

          @{await Html.RenderPartialAsync("_FormFields.cshtml");}

          <div class="text-right mt-3">
            <a asp-action="Index" class="btn btn-default">
              <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
            </a>
            <button class="btn btn-warning" type="submit">
              <span class="ion ion-md-create" aria-hidden="true"></span>&nbsp;Nota Fiscal
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>