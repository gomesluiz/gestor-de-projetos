@model IEnumerable<Ferrero.GestorDeProjetos.Web.Models.ViewModels.ResumoFinanceiroViewModel>
@{
    ViewData["Title"] = "Todos os resumos financeiros";
}
@section Styles {
    <!-- Dependencies -->
    <link rel="stylesheet" href="~/vendor/libs/datatables/datatables.css">
}

@section Scripts {
    <!-- Dependencies -->
    <script src="~/vendor/libs/datatables/datatables.js"></script>
    <script src="~/js/tables_datatables.js"></script>
}

<!-- CONTENT -->
<h4 class="d-flex justify-content-between align-items-center w-100 font-weight-bold py-3 mb-4">
  <div><span class="text-muted font-weight-light">Todos/</span>Resumos Financeiros</div>
  <a type="button" class="btn btn-primary rounded-pill d-block" asp-action="Create" asp-controller="ResumosFinanceiros">
    <span class="ion ion-md-add"></span>&nbsp;Resumo Financeiro
  </a>
</h4>

<div class="card">
  <div class="card-datatable table-responsive">
    <table id="todos-os-projetos" class="table table-striped table-bordered table-datatable">
      <thead>
          <tr>
              <th class="text-center">@Html.DisplayNameFor(model => model.OrdemDeInvestimentoNumero)          </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.Data)        </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.OrdemDeInvestimentoBudget)  </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.Commitment)  </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.Assigned)    </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.Actual)      </th>
              <th class="text-center">@Html.DisplayNameFor(model => model.Available)   </th>
              <th></th>
          </tr>
      </thead>
      <tbody>
    @foreach (var item in Model) {
        <tr>
          <td class="text-center">@Html.DisplayFor(modelItem => item.OrdemDeInvestimentoNumero)            </td>
          <td class="text-center">@Html.DisplayFor(modelItem => item.Data)          </td>
          <td class="text-right">@Html.DisplayFor(modelItem => item.OrdemDeInvestimentoBudget)    </td>
          <td class="text-right">@Html.DisplayFor(modelItem => item.Commitment)    </td>
          <td class="text-right">@Html.DisplayFor(modelItem => item.Assigned)      </td>
          <td class="text-right">@Html.DisplayFor(modelItem => item.Actual)        </td>
          <td class="text-right">@Html.DisplayFor(modelItem => item.Available)     </td>
          <td class="text-right">
            <a asp-action="Edit" class="btn btn-warning btn-sm" asp-route-id="@item.Id">
              <span class="ion ion-md-create">
            </a>
            <a asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@item.Id">
              <span class="ion ion-md-trash">
            </a>
          </td>
        </tr>
    }
    </tbody>
    </table>
  </div>
</div>