@model Ferrero.GestorDeProjetos.Web.Models.ViewModels.PlanilhaResumoFinanceiroViewModel

@{
    ViewData["Title"] = "Importação de Resumos Financeiro";
}

@section Styles {
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.css">
}

@section Scripts {
  <!-- Dependencies -->
  <script src="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.js"></script>
  <script src="~/vendor/libs/bootstrap-datepicker/bootstrap-datepicker.js"></script>
  <script src="~/vendor/libs/vanilla-text-mask/vanilla-text-mask.js"></script>
  <script src="~/vendor/libs/vanilla-text-mask/text-mask-addons.js"></script>
  <script src="~/js/forms_extras.js"></script>
  <script src="~/js/forms_pickers.js"></script>
  <script src="~/js/forms_file-upload.js"></script>

  @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<!-- Layout content -->
<div class="layout-content">
 <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Importação /</span> Resumo Financeiro
    </h4>
    <div class="card mb-4">
      <h6 class="card-header">Informações Básicas</h6>
      <div class="card-body">
        <form asp-action="Import" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data" class="form-label"></label><span class="text-danger">&nbsp;*</span>
                <input asp-for="Data" class="form-control text-mask-date datepicker-base" placeholder="__/__/____" />
            </div>
            <div class="form-group">
                <label for="Arquivo" class="form-label"></label>
                <div class="custom-file">
                    <input type="file" id="Arquivo" name="Arquivo" class="form-control custom-file-input" />
                    <span asp-validation-for="Arquivo" class="text-danger"></span>
                    <label class="custom-file-label"></label>
                </div>
            </div>

            <div class="text-right mt-3">
                <a asp-action="Index" class="btn btn-default">
                <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
                </a>
                <button class="btn btn-success" type="submit">
                <span class="ion ion-md-cloud-upload" aria-hidden="true"></span>&nbsp;Resumos Financeiros 
                </button>
            </div>
        </form>
      </div>
    </div>
  </div>
</div>