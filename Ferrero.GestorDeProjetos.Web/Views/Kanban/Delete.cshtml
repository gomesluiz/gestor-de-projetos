@model Ferrero.GestorDeProjetos.Web.Models.Kanban.TarefaViewModel

@{
    ViewData["Title"] = "Excluir Tarefa";
}

@section Styles {
  <link rel="stylesheet" href="~/vendor/libs/bootstrap-maxlength/bootstrap-maxlength.css">
}

<!-- Layout content -->
<div class="layout-content">
  <!-- Content -->
  <div class="container-fluid flex-grow-1 container-p-y">
    <h4 class="font-weight-bold py-3 mb-4">
      <span class="text-muted font-weight-light">Excluir /</span> Tarefa
    </h4>
    <div class="card mb-4">
      <h6 class="card-header">Informações Básicas</h6>
      <div class="card-body">
        <form asp-action="Delete">
          <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <input type="hidden" asp-for="Id" />      
          @{await Html.RenderPartialAsync("_FormFields.cshtml");}
          <div class="text-right mt-3">
            <a href="@Url.RouteUrl("Default", new { action = "Show", controller = "Kanban" , projetoId = @Model.ProjetoId})" class="btn btn-default">
              <span class="ion ion-md-close" aria-hidden="true"></span>&nbsp;Cancelar
            </a>
            <button class="btn btn-danger" type="submit">
              <span class="ion ion-md-trash" aria-hidden="true"></span>&nbsp;Tarefa 
            </button>
          </div>            
        </form>
      </div>
    </div>
  </div>
</div>
